<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" backgroundGradientColors="[#292929, #646464]">
	<mx:Panel width="642" height="580" layout="absolute" verticalCenter="0" horizontalCenter="0">
		<mx:Button label="Generate Photo Thumbnails" fontSize="12" x="10" y="10" click="toggleFullScreen(event);"/>
	</mx:Panel>
	<mx:Script>
		<![CDATA[
			import flash.events.MouseEvent;
			import butterflynet.ButterflyNetFlash;
			import flash.display.StageDisplayState;
			
			private var bnet:ButterflyNetFlash = new ButterflyNetFlash();

			private var fullScreen:Boolean = false;

			private function clickHandler(event:MouseEvent):void {
				trace("clickHandler");
				bnet.test();
			}
			
			private function toggleFullScreen(event:MouseEvent):void {
				trace("toggleFullScreen");
				if (fullScreen) {
					stage.displayState = StageDisplayState.NORMAL;
				} else {
					stage.displayState = StageDisplayState.FULL_SCREEN;
				}
				fullScreen = !fullScreen;
			}

		]]>
	</mx:Script>
</mx:Application>
